            },
            "32bit": {
                "url": "https://resource.u-tools.cn/currentversion/uTools-$version-ia32.exe#/dl.7z",
                "hash": {
                    "url": "$baseurl/latest-ia32.yml?t=$timestamp",
                    "regex": "sha512:\\s*$base64"
                }
            }
        }
    }
