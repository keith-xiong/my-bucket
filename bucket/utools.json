            }
        }
    },
    "post_install": "Remove-Item \"$dir\\`$PLUGINSDIR\", \"$dir\\Uninstall uTools.exe\" -Force -Recurse",
    "shortcuts": [
        [
            "uTools.exe",
            "uTools"
        ]
    ],
    "checkver": {
        "url": "https://resource.u-tools.cn/currentversion/latest.yml?t=$timestamp",
        "regex": "(?s)version:\\s*([^\\n]*).*sha512:\\s*([^\\n]*)"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://resource.u-tools.cn/currentversion/uTools-$version.exe#/dl.7z",
                "hash": {
                    "url": "$baseurl/latest.yml?t=$timestamp",
                    "find": "sha512:\\s*($match2)"
                }
            },
            "32bit": {
                "url": "https://resource.u-tools.cn/currentversion/uTools-$version-ia32.exe#/dl.7z",
                "hash": {
                    "url": "$baseurl/latest-ia32.yml?t=$timestamp",
                    "regex": "sha512:\\s*$base64"
                }
            }
        }
    }
}
